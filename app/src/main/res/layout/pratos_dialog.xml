<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edt_nome_prato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="Nome do Prato"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_desc_prato"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Descrição do Prato"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edt_nome_prato"
        app:layout_constraintStart_toStartOf="@+id/edt_nome_prato"
        app:layout_constraintTop_toBottomOf="@+id/edt_nome_prato" />

    <EditText
        android:id="@+id/edt_valor_prato"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Valor do Prato"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/edt_desc_prato"
        app:layout_constraintStart_toStartOf="@+id/edt_desc_prato"
        app:layout_constraintTop_toBottomOf="@+id/edt_desc_prato" />

    <Spinner
        android:id="@+id/spinnerFiltro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_valor_prato"
        app:layout_constraintStart_toStartOf="@+id/edt_valor_prato"
        app:layout_constraintTop_toBottomOf="@+id/edt_valor_prato" />

</androidx.constraintlayout.widget.ConstraintLayout>